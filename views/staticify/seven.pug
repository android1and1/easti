extends ../layouts/main
block content
  h2 svg lesson - Animation. 
  svg(version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"  width="1008px" height="1000px")
    title Accesing Content In SVG
    rect(id="rectangle" x="10" y="20" width="30" height="40" style="stroke:gray;fill:#ff9;stroke-width=3")
    text(id="output" x="10" y="80" style="font-size:9pt")
    script(type="application/ecmascript").
      // <![CDATA[
        var txt = document.getElementById("output");
        var r = document.getElementById('rectangle');
        var msg = r.getAttribute("x") + ", " + 
          r.getAttribute("y") + " " + 
          r.style.getPropertyValue("stroke") + " " + 
          r.style.getPropertyValue("fill");
        r.setAttribute("height","30");
        txt.textContent = msg;
      // ]]>
    g(transform="translate(100,60)")
      circle(cx="30" cy="30" r="15" style="fill:#cfc;stroke:green;")
      rect(x="0" y="0" width="30" height="30" style="fill:#ccc")
      animateMotion(from="0 0" to="60 30" dur="4s" fill="freeze")
