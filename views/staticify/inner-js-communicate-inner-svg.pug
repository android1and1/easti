extends ../layouts/main
block content
  //- 说明，这个试验目的是测验存在于SVG标签里的
  //-javascript codes come communicate its svg codes(in this case,
  //It is 'inner-js communicate inner-svg's <path>
  button#idot(class="btn btn-default") dodo
  button#zheng(class="btn btn-primary") Zheng Shi
  h1 svg lesson - Path
  svg(id="you-svg" version="1.1" xmlns="http://www.w3.org/2000/svg" width="550" height="500")
    title  内置的JS代码操Little Buttercup 
    g(id="thepath")
      path(fill="none" id="yes-sir" d="M200,100 L0,400 L500,400 L 200,100" stroke="black" stroke-width="4")
    script.
      var path = document.getElementById('yes-sir');
      //这里设置了三秒之后，把原先fill=none更改为fill=yellow(黄色)
      window.setTimeout(function(){path.setAttribute('fill','yellow');},1000*3);
  
  h2 continue
