extends ../layouts/main
block content
  svg(viewBox="0 0 300 200" width="980px" height="800px" xmlns='http://www.w3.org/2000/svg' version="1.1")
    defs
      linearGradient#three_stops
        stop(offset="0%",style="stop-color:red;")
        stop(offset="33.3%",style="stop-color:white;")
        stop(offset="100%",style="stop-color:blue;")
      linearGradient#right2left(xlink:href="#three_stops",x1="100%",y1="0%",x2="0%",y2="0%")
      linearGradient#top2bottom(xlink:href="#three_stops" x1="0%",y1="0%",x2="0%",y2="100%")
      linearGradient#bottom2top(xlink:href="#three_stops" x1="0%" y1="100%" x2="0%" y2="0%")
    rect(x="40" y="10" width="200" height="40" style="fill:url(#three_stops);stroke:black;")
    rect(x="10" y="55" width="200" height="40" style="fill:url(#right2left);stroke:purple;")
    rect(x="60" y="100" width="200" height="40" style="fill:url(#top2bottom);stroke:purple;")
    rect(x="10" y="155" width="200" height="40" style="fill:url(#bottom2top);stroke:purple;")
